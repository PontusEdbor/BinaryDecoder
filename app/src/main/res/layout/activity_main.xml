<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/BinaryInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:autofillHints="101"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="number"
            android:hint="@string/input_to_be_decoded"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:orientation="horizontal">

            <Button
                android:id="@+id/decodeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:text="@string/decode"
                tools:ignore="NestedWeights"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/decodeASCIIButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:text="@string/ascii"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:orientation="horizontal">

            <Button
                android:id="@+id/encodeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:text="@string/encode"
                tools:ignore="NestedWeights"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/encodeASCIIButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:text="@string/ascii"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>

        <EditText
            android:id="@+id/DecimalInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:autofillHints="5"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="text"
            android:hint="@string/input_to_be_encoded"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>